---
// src/components/TelegramCTA.astro
interface Props {
  variant?: "full" | "compact";
}

const { variant = "full" } = Astro.props;

const freeChannelUrl = "https://t.me/everinvests";
const premiumUrl = "https://t.me/everinvests_premium";
---

{variant === "full" ? (
  <div class="relative overflow-hidden rounded-2xl" data-animate>
    <!-- Background gradient -->
    <div class="absolute inset-0 bg-gradient-to-r from-[#0088cc]/20 via-cyber/10 to-[#0088cc]/20"></div>
    <div class="absolute inset-0 backdrop-blur-sm" style="background: var(--bg-overlay-light);"></div>

    <!-- Content -->
    <div class="relative p-6 sm:p-8">
      <div class="flex flex-col lg:flex-row items-center gap-6 lg:gap-8">
        <!-- Icon -->
        <div class="flex-shrink-0">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-[#0088cc] to-[#00aaff] flex items-center justify-center shadow-lg">
            <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.562 8.161c-.18 1.897-.962 6.502-1.359 8.627-.168.9-.5 1.201-.82 1.23-.697.064-1.226-.461-1.901-.903-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.139-5.062 3.345-.479.329-.913.489-1.302.481-.428-.009-1.252-.242-1.865-.442-.751-.244-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.831-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635.099-.002.321.023.465.141.12.098.153.228.166.331.014.103.03.318.017.492z"/>
            </svg>
          </div>
        </div>

        <!-- Text -->
        <div class="flex-grow text-center lg:text-left">
          <h3 class="font-display font-bold text-xl text-txt-primary mb-2">
            Why Telegram? Because markets don't wait.
          </h3>
          <p class="text-sm text-txt-secondary max-w-lg">
            Email is too slow. Apps need checking. Telegram pings your phone the moment signals update.
            Free channel = daily bias. VIP group = real-time discussion + whale alerts + AI debates.
          </p>
        </div>

        <!-- Buttons -->
        <div class="flex flex-col sm:flex-row gap-3">
          <a href={freeChannelUrl} target="_blank" rel="noopener" class="btn-telegram">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.562 8.161c-.18 1.897-.962 6.502-1.359 8.627-.168.9-.5 1.201-.82 1.23-.697.064-1.226-.461-1.901-.903-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.139-5.062 3.345-.479.329-.913.489-1.302.481-.428-.009-1.252-.242-1.865-.442-.751-.244-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.831-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635.099-.002.321.023.465.141.12.098.153.228.166.331.014.103.03.318.017.492z"/>
            </svg>
            Free Channel
          </a>
          <a href={premiumUrl} target="_blank" rel="noopener" class="btn-primary">
            VIP Group
          </a>
        </div>
      </div>
    </div>
  </div>
) : (
  <a
    href={freeChannelUrl}
    target="_blank"
    rel="noopener"
    class="btn-telegram inline-flex"
  >
    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
      <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.562 8.161c-.18 1.897-.962 6.502-1.359 8.627-.168.9-.5 1.201-.82 1.23-.697.064-1.226-.461-1.901-.903-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.139-5.062 3.345-.479.329-.913.489-1.302.481-.428-.009-1.252-.242-1.865-.442-.751-.244-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.831-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635.099-.002.321.023.465.141.12.098.153.228.166.331.014.103.03.318.017.492z"/>
    </svg>
    Join Telegram
  </a>
)}
