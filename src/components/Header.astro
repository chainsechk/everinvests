---
// src/components/Header.astro
const pathname = Astro.url.pathname;

const navLinks = [
  { href: "/", label: "Home", icon: "home" },
  { href: "/crypto", label: "Crypto", icon: "btc" },
  { href: "/forex", label: "Forex", icon: "fx" },
  { href: "/stocks", label: "Stocks", icon: "chart" },
];

function isActive(href: string): boolean {
  if (href === "/") return pathname === "/";
  return pathname.startsWith(href);
}
---

<header class="sticky top-0 z-50 backdrop-blur-xl border-b border-void-200/30">
  <div class="absolute inset-0 bg-void/80"></div>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="relative">
          <div class="w-9 h-9 rounded-lg bg-gradient-to-br from-cyber to-bullish flex items-center justify-center shadow-glow-cyber group-hover:scale-105 transition-transform">
            <svg class="w-5 h-5 text-void" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <path d="M13 7l5 5-5 5M6 7l5 5-5 5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
        <span class="font-display font-bold text-xl text-txt-primary group-hover:text-gradient transition-all">
          EverInvests
        </span>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden sm:flex items-center gap-1">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[
                "relative px-4 py-2 rounded-lg font-display font-medium text-sm transition-all duration-200",
                isActive(link.href)
                  ? "text-txt-primary bg-void-100"
                  : "text-txt-secondary hover:text-txt-primary hover:bg-void-100/50",
              ]}
            >
              {link.label}
              {isActive(link.href) && (
                <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-1 h-1 rounded-full bg-cyber"></span>
              )}
            </a>
          </li>
        ))}
        <li class="ml-2">
          <a
            href="https://t.me/everinvests"
            target="_blank"
            rel="noopener"
            class="btn-telegram text-xs py-2"
          >
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.562 8.161c-.18 1.897-.962 6.502-1.359 8.627-.168.9-.5 1.201-.82 1.23-.697.064-1.226-.461-1.901-.903-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.139-5.062 3.345-.479.329-.913.489-1.302.481-.428-.009-1.252-.242-1.865-.442-.751-.244-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.831-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635.099-.002.321.023.465.141.12.098.153.228.166.331.014.103.03.318.017.492z"/>
            </svg>
            Join
          </a>
        </li>
      </ul>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="sm:hidden p-2 rounded-lg text-txt-secondary hover:text-txt-primary hover:bg-void-100/50 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="sm:hidden hidden pb-4">
      <ul class="flex flex-col gap-1">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[
                "block px-4 py-3 rounded-lg font-display font-medium text-sm transition-colors",
                isActive(link.href)
                  ? "text-txt-primary bg-void-100"
                  : "text-txt-secondary hover:text-txt-primary hover:bg-void-100/50",
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li class="mt-2">
          <a
            href="https://t.me/everinvests"
            target="_blank"
            rel="noopener"
            class="btn-telegram w-full justify-center"
          >
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.562 8.161c-.18 1.897-.962 6.502-1.359 8.627-.168.9-.5 1.201-.82 1.23-.697.064-1.226-.461-1.901-.903-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.139-5.062 3.345-.479.329-.913.489-1.302.481-.428-.009-1.252-.242-1.865-.442-.751-.244-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.831-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635.099-.002.321.023.465.141.12.098.153.228.166.331.014.103.03.318.017.492z"/>
            </svg>
            Join Telegram
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
