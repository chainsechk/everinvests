---
// src/components/ShareBlock.astro
// Social sharing buttons for signal pages

interface Props {
  url: string;
  title: string;
  description: string;
  category: string;
  bias: string;
}

const { url, title, description, category, bias } = Astro.props;

// Build share URLs
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);

// Twitter/X share text - concise with emoji
const biasEmoji = bias.toLowerCase().includes("bullish") ? "ðŸŸ¢" :
                  bias.toLowerCase().includes("bearish") ? "ðŸ”´" : "ðŸŸ¡";
const tweetText = encodeURIComponent(`${biasEmoji} ${category} signal: ${bias}\n\n${description}\n\nvia @EverInvests`);
const twitterUrl = `https://twitter.com/intent/tweet?text=${tweetText}&url=${encodedUrl}`;

// Reddit share
const redditUrl = `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`;

// LinkedIn share
const linkedinUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`;
---

<div class="card" data-animate>
  <div class="flex items-center justify-between mb-4">
    <h3 class="font-display font-semibold text-txt-primary">Share this signal</h3>
  </div>

  <div class="flex flex-wrap gap-3">
    <!-- Twitter/X -->
    <a
      href={twitterUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn share-btn-twitter"
      data-share="twitter"
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
      <span class="hidden sm:inline">Post</span>
    </a>

    <!-- Reddit -->
    <a
      href={redditUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn share-btn-reddit"
      data-share="reddit"
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
      </svg>
      <span class="hidden sm:inline">Reddit</span>
    </a>

    <!-- LinkedIn -->
    <a
      href={linkedinUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn share-btn-linkedin"
      data-share="linkedin"
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
      <span class="hidden sm:inline">LinkedIn</span>
    </a>

    <!-- Copy Link -->
    <button
      class="share-btn share-btn-copy"
      data-share="copy"
      data-url={url}
      id="copy-link-btn"
    >
      <svg class="w-5 h-5 copy-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
      </svg>
      <svg class="w-5 h-5 check-icon hidden" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
      </svg>
      <span class="btn-text">Copy link</span>
    </button>
  </div>

  <!-- Share preview text -->
  <div class="mt-4 p-3 bg-void-200 rounded-lg text-sm text-txt-muted">
    <span class="text-txt-secondary font-medium">Preview:</span> {biasEmoji} {category} signal: {bias}
  </div>
</div>

<style>
  .share-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    border: 1px solid var(--border-default);
    background: var(--bg-tertiary);
    color: var(--text-secondary);
  }

  .share-btn:hover {
    transform: translateY(-1px);
    border-color: var(--border-strong);
  }

  .share-btn-twitter:hover {
    background: rgba(29, 161, 242, 0.1);
    border-color: rgba(29, 161, 242, 0.3);
    color: #1da1f2;
  }

  .share-btn-reddit:hover {
    background: rgba(255, 69, 0, 0.1);
    border-color: rgba(255, 69, 0, 0.3);
    color: #ff4500;
  }

  .share-btn-linkedin:hover {
    background: rgba(0, 119, 181, 0.1);
    border-color: rgba(0, 119, 181, 0.3);
    color: #0077b5;
  }

  .share-btn-copy:hover {
    background: rgba(0, 212, 255, 0.1);
    border-color: rgba(0, 212, 255, 0.3);
    color: var(--accent);
  }

  .share-btn-copy.copied {
    background: rgba(34, 197, 94, 0.1);
    border-color: rgba(34, 197, 94, 0.3);
    color: #22c55e;
  }

  .share-btn-copy.copied .copy-icon {
    display: none;
  }

  .share-btn-copy.copied .check-icon {
    display: block;
  }
</style>

<script>
  const copyBtn = document.getElementById('copy-link-btn');
  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      const url = copyBtn.getAttribute('data-url');
      if (!url) return;

      try {
        await navigator.clipboard.writeText(url);
        copyBtn.classList.add('copied');
        const textEl = copyBtn.querySelector('.btn-text');
        if (textEl) textEl.textContent = 'Copied!';

        setTimeout(() => {
          copyBtn.classList.remove('copied');
          if (textEl) textEl.textContent = 'Copy link';
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  }
</script>
