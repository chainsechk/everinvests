---
// src/components/SignalDetail.astro
import BiasIndicator from "./BiasIndicator.astro";

interface Props {
  signal: {
    id: number;
    bias: string;
    date: string;
    time_slot: string;
    generated_at: string;
    macro_overall: string | null;
    output_json: string | null;
  };
}

const { signal } = Astro.props;

function parseOutput(outputJson: string | null) {
  if (!outputJson) return null;
  try {
    return JSON.parse(outputJson);
  } catch {
    return null;
  }
}

const output = parseOutput(signal.output_json);
const qualityFlags = output?.quality_flags || null;

function formatDate(dateStr: string): string {
  try {
    const date = new Date(dateStr);
    return date.toLocaleDateString("en-US", { weekday: "short", month: "short", day: "numeric" });
  } catch {
    return dateStr;
  }
}

function getMacroColor(macro: string | null): string {
  if (!macro) return "text-txt-muted";
  const lower = macro.toLowerCase();
  if (lower.includes("risk-on")) return "text-bullish";
  if (lower.includes("risk-off")) return "text-bearish";
  return "text-mixed";
}
---

<div class="card space-y-6" data-animate>
  <!-- Header -->
  <div class="flex flex-wrap items-start justify-between gap-4">
    <div class="flex items-center gap-4">
      <BiasIndicator bias={signal.bias} size="lg" />
      {signal.macro_overall && (
        <div class="flex items-center gap-2 text-sm">
          <span class="text-txt-muted">Macro:</span>
          <span class:list={["font-medium", getMacroColor(signal.macro_overall)]}>
            {signal.macro_overall}
          </span>
        </div>
      )}
    </div>
    <div class="flex items-center gap-2 text-sm text-txt-muted font-mono">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      {formatDate(signal.date)} at {signal.time_slot} UTC
    </div>
  </div>

  <!-- Summary -->
  {output?.summary && (
    <div class="text-lg text-txt-primary leading-relaxed border-l-2 border-cyber/30 pl-4">
      {output.summary}
    </div>
  )}

  <!-- Key Levels -->
  {output?.levels && Object.keys(output.levels).length > 0 && (
    <div class="space-y-3">
      <h3 class="font-display font-semibold text-sm text-txt-muted uppercase tracking-wider">Key Levels</h3>
      <div class="flex flex-wrap gap-3">
        {Object.entries(output.levels).map(([key, value]) => (
          <div class="px-4 py-2 rounded-lg bg-void-100/50 border border-void-200/30">
            <span class="text-xs text-txt-muted uppercase tracking-wide">{key.replace(/_/g, " ")}</span>
            <div class="font-mono font-semibold text-txt-primary">{value}</div>
          </div>
        ))}
      </div>
    </div>
  )}

  <!-- Triggers & Risks -->
  <div class="grid gap-6 sm:grid-cols-2">
    {output?.triggers && output.triggers.length > 0 && (
      <div class="space-y-3">
        <h3 class="font-display font-semibold text-sm text-txt-muted uppercase tracking-wider flex items-center gap-2">
          <span class="w-1.5 h-1.5 rounded-full bg-bullish"></span>
          Bullish Triggers
        </h3>
        <ul class="space-y-2">
          {output.triggers.map((trigger: string) => (
            <li class="text-sm text-txt-secondary flex items-start gap-2">
              <svg class="w-4 h-4 text-bullish mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
              {trigger}
            </li>
          ))}
        </ul>
      </div>
    )}

    {output?.risks && output.risks.length > 0 && (
      <div class="space-y-3">
        <h3 class="font-display font-semibold text-sm text-txt-muted uppercase tracking-wider flex items-center gap-2">
          <span class="w-1.5 h-1.5 rounded-full bg-bearish"></span>
          Risk Factors
        </h3>
        <ul class="space-y-2">
          {output.risks.map((risk: string) => (
            <li class="text-sm text-txt-secondary flex items-start gap-2">
              <svg class="w-4 h-4 text-bearish mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
              {risk}
            </li>
          ))}
        </ul>
      </div>
    )}
  </div>

  <!-- Data Quality -->
  {qualityFlags && (
    qualityFlags.macro_fallback ||
    qualityFlags.macro_stale ||
    (qualityFlags.missing_assets && qualityFlags.missing_assets.length > 0) ||
    (qualityFlags.stale_assets && qualityFlags.stale_assets.length > 0) ||
    (qualityFlags.outlier_values && qualityFlags.outlier_values.length > 0)
  ) && (
    <div class="pt-4 border-t border-void-200/30">
      <div class="flex items-start gap-2 text-sm text-mixed">
        <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="space-y-1">
          {qualityFlags.macro_fallback && (
            <p>Macro data unavailable - using fallback</p>
          )}
          {qualityFlags.macro_stale && (
            <p>Macro data may be stale (cached)</p>
          )}
          {qualityFlags.missing_assets && qualityFlags.missing_assets.length > 0 && (
            <p>Missing assets: {qualityFlags.missing_assets.join(", ")}</p>
          )}
          {qualityFlags.stale_assets && qualityFlags.stale_assets.length > 0 && (
            <p>Stale data: {qualityFlags.stale_assets.join(", ")}</p>
          )}
          {qualityFlags.outlier_values && qualityFlags.outlier_values.length > 0 && (
            <p>Outlier values detected: {qualityFlags.outlier_values.map((o: {ticker: string; reason: string}) => `${o.ticker} (${o.reason})`).join(", ")}</p>
          )}
        </div>
      </div>
    </div>
  )}
</div>
