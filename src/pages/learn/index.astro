---
// src/pages/learn/index.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import TelegramCTA from "../../components/TelegramCTA.astro";

const breadcrumbLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: "Home", item: "https://everinvests.com" },
    { "@type": "ListItem", position: 2, name: "Learn", item: "https://everinvests.com/learn" }
  ]
};
---

<BaseLayout
  title="Learn"
  description="Learn how EverInvests signals work: methodology, glossary, and practical guides."
  jsonLd={breadcrumbLd}
>
  <Header slot="header" />

  <div class="max-w-4xl mx-auto space-y-10">
    <header class="text-center py-8" data-animate>
      <nav class="text-sm text-txt-muted mb-4">
        <a href="/" class="hover:text-txt-secondary">Home</a>
        <span class="mx-2">/</span>
        <span class="text-txt-primary">Learn</span>
      </nav>
      <h1 class="font-display font-bold text-3xl sm:text-5xl text-txt-primary mb-4">
        Learn the System
      </h1>
      <p class="text-lg text-txt-secondary max-w-2xl mx-auto">
        No black box. Understand how signals are generated and how to use them responsibly.
      </p>
    </header>

    <section class="grid gap-6 md:grid-cols-2" data-animate>
      <a href="/learn/methodology" class="card hover:border-cyber/40 transition-colors">
        <div class="text-xs text-txt-muted uppercase tracking-wide mb-2">Methodology</div>
        <div class="font-display font-bold text-xl text-txt-primary mb-2">How we calculate signals</div>
        <p class="text-sm text-txt-secondary">
          Our 3-indicator confluence model: Trend + Volume + Strength.
        </p>
      </a>

      <a href="/learn/glossary" class="card hover:border-cyber/40 transition-colors">
        <div class="text-xs text-txt-muted uppercase tracking-wide mb-2">Glossary</div>
        <div class="font-display font-bold text-xl text-txt-primary mb-2">Key trading terms</div>
        <p class="text-sm text-txt-secondary">
          Bias, confluence, RSI, Fear &amp; Greed, regime, and more.
        </p>
      </a>
    </section>

    <section class="card" data-animate>
      <h2 class="font-display font-bold text-xl text-txt-primary mb-4">Guides</h2>
      <div class="grid gap-4 sm:grid-cols-2">
        <a href="/guides/how-to-use-signals" class="card hover:border-cyber/40 transition-colors">
          <div class="font-medium text-txt-primary mb-1">How to Use These Signals</div>
          <div class="text-sm text-txt-muted">A simple 3-step workflow: Macro → Category → Asset.</div>
        </a>
        <a href="/guides/bullish-vs-bearish" class="card hover:border-cyber/40 transition-colors">
          <div class="font-medium text-txt-primary mb-1">Bullish vs Bearish Explained</div>
          <div class="text-sm text-txt-muted">What each bias means and how to interpret it.</div>
        </a>
        <a href="/guides/fear-and-greed" class="card hover:border-cyber/40 transition-colors">
          <div class="font-medium text-txt-primary mb-1">Fear &amp; Greed Index</div>
          <div class="text-sm text-txt-muted">How sentiment works and why extremes matter.</div>
        </a>
      </div>
    </section>

    <TelegramCTA variant="full" />
  </div>

  <Footer slot="footer" />
</BaseLayout>
