---
// src/layouts/BaseLayout.astro
import "../styles/global.css";
import { absoluteUrl, SITE_URL } from "../lib/site";
import JsonLd from "../components/JsonLd.astro";
import DisclaimerBanner from "../components/DisclaimerBanner.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  jsonLd?: Record<string, unknown> | Record<string, unknown>[];
}

const {
  title,
  description = "Daily market signals for Crypto, Forex, and Stocks. Free automated analysis updated multiple times daily.",
  image = "/og/default.svg",
  jsonLd,
} = Astro.props;

const fullTitle = title === "EverInvests" ? title : `${title} | EverInvests`;
const canonicalUrl = absoluteUrl(Astro.url.pathname);

// Base schemas for every page
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "EverInvests",
  url: SITE_URL || "https://everinvests.com",
  description: "Daily market signals for Crypto, Forex, and Stocks. Free automated analysis updated multiple times daily.",
};

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "EverInvests",
  url: SITE_URL || "https://everinvests.com",
  logo: absoluteUrl("/favicon.svg"),
  sameAs: ["https://t.me/everinvests"],
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="EverInvests - Market Signals" href="/rss.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteUrl(image)} />
    <meta property="og:site_name" content="EverInvests" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteUrl(image)} />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://t.me" />
    <link rel="dns-prefetch" href="https://t.me" />

    <!-- Theme color - will be updated by JS based on theme -->
    <meta name="theme-color" content="#0a0e17" />

    <title>{fullTitle}</title>

    <!-- Structured Data -->
    <JsonLd schema={websiteSchema} />
    <JsonLd schema={organizationSchema} />
    {jsonLd && (Array.isArray(jsonLd) ? jsonLd.map((schema) => <JsonLd schema={schema} />) : <JsonLd schema={jsonLd} />)}

    <!-- Prevent FOUC: apply theme before render -->
    <script is:inline>
      (function() {
        const saved = localStorage.getItem('theme');
        // Default to dark theme
        const theme = saved || 'dark';
        document.documentElement.setAttribute('data-theme', theme);
        // Update meta theme-color immediately
        const meta = document.querySelector('meta[name="theme-color"]');
        if (meta) meta.setAttribute('content', theme === 'dark' ? '#0a0e17' : '#faf9f7');
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col relative">
    <!-- Compliance disclaimer banner -->
    <DisclaimerBanner />

    <!-- Ambient glow effects (dark theme only) -->
    <div class="ambient-glow fixed inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
      <div class="absolute -top-40 -right-40 w-96 h-96 rounded-full blur-3xl" style="background: var(--accent-bg);"></div>
      <div class="absolute top-1/2 -left-40 w-80 h-80 rounded-full blur-3xl" style="background: var(--bullish-bg);"></div>
    </div>

    <slot name="header" />

    <main class="flex-grow relative z-10">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </div>
    </main>

    <slot name="footer" />

    <!-- Page transition script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Animate elements on page load
        const animatedElements = document.querySelectorAll('[data-animate]');
        animatedElements.forEach((el, i) => {
          (el as HTMLElement).style.animationDelay = `${i * 100}ms`;
          el.classList.add('animate-slide-up');
        });
      });
    </script>
  </body>
</html>
